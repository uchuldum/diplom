<Window x:Class="pisateli_tuvy.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pisateli_tuvy"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="300" Width="300">
        <StackPanel Margin="10">
            <ProgressBar Name="Progress" Width="200" Height="20" Minimum="0" Maximum="1" Margin="10" Orientation="Horizontal" />
            <TextBlock HorizontalAlignment="Center" Name="StatusText" Width="160" Margin="10" Height="50" Foreground="Black" Text="Идет процесс копирования, пожалуйста, подождите" TextWrapping="Wrap"/>
        </StackPanel>
</Window>
